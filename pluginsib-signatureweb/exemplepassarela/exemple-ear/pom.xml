<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>pluginsib-signatureweb-signaturetester-ear</artifactId>
  <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
  <packaging>ear</packaging>

  <name>FundacioBit - PluginsIB - SignatureWeb - SignatureTester - EAR</name>

  <parent>
    <artifactId>pluginsib-signatureweb-signaturetester</artifactId>
    <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
    <version>3.0.0</version>
  </parent>

  <dependencies>

    <!-- Internes -->
    <dependency>
      <artifactId>pluginsib-signatureweb-signaturetester-ejb</artifactId>
      <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
      <version>${project.version}</version>
      <type>ejb</type>
    </dependency>

    <dependency>
      <artifactId>pluginsib-signatureweb-signaturetester-war</artifactId>
      <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>

    <!-- Externes -->

    <dependency>
      <groupId>commons-fileupload</groupId>
      <artifactId>commons-fileupload</artifactId>
      <version>1.2.2</version>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.4</version>
    </dependency>

    <!-- ====================================== -->
    <!-- =====   PLUGINS DE SIGNATUREWEB  ===== -->
    <!-- ====================================== -->

    <dependency>
      <groupId>org.fundaciobit.pluginsib.core</groupId>
      <artifactId>pluginsib-core</artifactId>
      <version>${plugins.version}</version>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.pluginsib.signatureweb</groupId>                    
      <artifactId>pluginsib-signatureweb-api</artifactId>
      <version>3.0.0</version>
    </dependency>

  </dependencies>

  <build>
    <finalName>passarela</finalName>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.3.2</version>
        <!-- configuring the ear plugin -->
        <configuration>

          <displayName>Exemple de Passarel-la de Firma</displayName>
          <description>Exemple de Passarel-la de Firma</description>

          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
            <manifestEntries>
              <Passarela-Version>${project.version}</Passarela-Version>
            </manifestEntries>



          </archive>

          <defaultLibBundleDir>lib</defaultLibBundleDir>

          <jboss>
            <version>5</version>
            <loader-repository>org.fundaciobit.pluginsib.signatureweb.signaturetester:loader=passarela.ear</loader-repository>
            <loader-repository-config>java2ParentDelegation=false</loader-repository-config>
          </jboss>

          <modules>

            <webModule>
              <artifactId>pluginsib-signatureweb-signaturetester-war</artifactId>
              <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
              <contextRoot>passarela</contextRoot>
            </webModule>

            <ejbModule>
              <artifactId>pluginsib-signatureweb-signaturetester-ejb</artifactId>
              <groupId>org.fundaciobit.pluginsib.signatureweb.signaturetester</groupId>
            </ejbModule>


          </modules>

        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jboss-maven-plugin</artifactId>
        <version>1.5.0</version>
        <configuration>
          <!-- <jbossHome>D:\servers\jboss-eap-5.1\jboss-as</jbossHome>-->
          <serverName>default</serverName>
          <fileName>target/passarela.ear</fileName> 
        </configuration>
      </plugin>

    </plugins>


    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

  </build>

</project>
