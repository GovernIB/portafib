<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>    
  <artifactId>portafib-ws-server</artifactId>
  <groupId>es.caib.portafib</groupId>
  <packaging>ejb</packaging>

  <name>PortaFIB WS - Server</name>

  <parent>
    <groupId>es.caib.portafib</groupId>
    <artifactId>portafib-ws</artifactId>
    <version>1.1.3</version>
  </parent>

  <properties>
    <source_v1>${basedir}/src_common/main/java</source_v1>
    <source_v2_common>${basedir}/src_common/main/java</source_v2_common>
    <source_v2_ws>${basedir}/src_common/main/java</source_v2_ws>
    <source_v2_passarela>${basedir}/src_common/main/java</source_v2_passarela>

  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ejb-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <ejbVersion>3.0</ejbVersion>
        </configuration>
      </plugin>
      <!-- Sempre fer net -->
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>auto-clean</id>
            <phase>initialize</phase>
            <goals>
              <goal>clean</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.5</version>
        <inherited>true</inherited>
        <executions>
          <execution>
            <id>add-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${source_v1}</source>
                <source>${source_v2_common}</source>
                <source>${source_v2_ws}</source>
                <source>${source_v2_passarela}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>


    </plugins>

    <sourceDirectory>${basedir}/src_common/main/java</sourceDirectory>
  </build>

  <dependencies>

    <dependency>
      <groupId>org.jboss.ejb3</groupId>
      <artifactId>jboss-ejb3-ext-api</artifactId>
      <version>1.1.1</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-bindings-soap</artifactId>
      <version>${cxf.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-frontend-jaxws</artifactId>
      <version>${cxf.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-transports-http</artifactId>
      <version>${cxf.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.cxf</groupId>
      <artifactId>cxf-rt-ws-security</artifactId>
      <version>${cxf.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.jboss.ws</groupId>
      <artifactId>jbossws-spi</artifactId>
      <version>1.1.2.GA</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <version>6.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>es.caib.portafib</groupId>
      <artifactId>portafib-utils</artifactId>
      <version>${portafib.version}</version>
    </dependency>

    <dependency>
      <groupId>es.caib.portafib</groupId>
      <artifactId>portafib-ejb</artifactId>
      <version>${portafib.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>es.caib.portafib</groupId>
      <artifactId>portafib-logic</artifactId>
      <version>${portafib.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugins-api</artifactId>
      <version>${plugins.version}</version>
      <scope>provided</scope>
    </dependency>


    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.2</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate-annotations</artifactId>
      <version>${hibernate.annotations.version}</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <profiles>

    <!-- Incloure API v1 --> 
    <profile>
      <id>ws-portafib-v1</id>
      <properties>
        <source_v1>${basedir}/src/main/java</source_v1>
      </properties>
    </profile>
    
    <!-- Incloure API v1 de Passarela Web --> 
    <profile>
      <id>passarelaweb-v1</id>
      <properties>
        <source_v1>${basedir}/src/main/java</source_v1>
      </properties>
    </profile>
    
    <!-- Incloure API v1 de Passarela En Servidor --> 
    <profile>
      <id>passarelaserver-v1</id>
      <properties>
        <source_v1>${basedir}/src/main/java</source_v1>
      </properties>
    </profile>

    <!-- Incloure API v2 Servies de PortaFIB --> 
    <profile>    
      <id>ws-portafib-v2</id>
      <properties>
        <source_v2_common>${basedir}/src2/main/java/common</source_v2_common>
        <source_v2_ws>${basedir}/src2/main/java/ws</source_v2_ws>
      </properties>
    </profile>

    <!-- Incloure API v2 de Passarela Web --> 
    <profile>
      <id>passarelaweb-v2</id>
      <properties>
        <source_v2_common>${basedir}/src2/main/java/common</source_v2_common>
        <source_v2_passarela>${basedir}/src2/main/java/passarela</source_v2_passarela>
      </properties>      
    </profile>
    
    <!-- Incloure API v2 de Passarela Server --> 
    <profile>
      <id>passarelaserver-v2</id>
      <properties>
        <source_v2_common>${basedir}/src2/main/java/common</source_v2_common>
        <source_v2_passarela>${basedir}/src2/main/java/passarela</source_v2_passarela>
      </properties>      
    </profile>

  </profiles>

</project>
