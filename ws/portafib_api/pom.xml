<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>portafib-ws-api</artifactId>
  <groupId>es.caib.portafib</groupId>
  <packaging>jar</packaging>
  <version>1.1</version>

  <name>PortaFIB WS - API</name>
  <!-- <parent> <groupId>es.caib.portafib</groupId> <artifactId>portafib-ws</artifactId> 
    <version>2.0.8</version> </parent> -->
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!-- JBoss dependency versions -->
    <version.org.jboss.spec.jboss.javaee.6.0>3.0.0.Final</version.org.jboss.spec.jboss.javaee.6.0>

  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.jboss.spec</groupId>
        <artifactId>jboss-javaee-6.0</artifactId>
        <version>${version.org.jboss.spec.jboss.javaee.6.0}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    
    <repository>
      <id>maven-nuxeo</id>
      <name>Maven Nuxeo Repository</name>
      <url>https://maven.nuxeo.org/nexus/content/groups/public/</url>
      <layout>default</layout>
      <releases>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>never</updatePolicy>
      </snapshots>
    </repository>
  
    <repository>
      <id>java.net-m2</id>
      <name>java.net - Maven 2</name>
      <url>https://repository.jboss.org/nexus/content/repositories/java.net-m2</url>
    </repository>
  </repositories>

  <build>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>


      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>org.fundaciobit.genapp:genapp-core</artifact>
                  <includes>
                    <include>org/fundaciobit/genapp/common/i18n/I18N*.*</include>
                    <include>org/fundaciobit/genapp/common/ws/Ws*Adapter.*</include>
                  </includes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/src/main/resources</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/../../logic/src/main/resources</directory>
                  <includes>
                    <include>logicmissatges_*.properties</include>
                    <include>genapp_*.properties</include>
                    <include>portafib_genapp_*.properties</include>
                  </includes>
                  <filtering>true</filtering>
                </resource>
              </resources>
              <overwrite>true</overwrite>
            </configuration>
          </execution>
        </executions>
      </plugin>


    </plugins>


    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

  </build>



  <profiles>
    <profile>
      <id>regenerateapi</id>
      <activation>
        <activeByDefault>false</activeByDefault>
        <property>
          <name>regenerateapi</name>
        </property>
      </activation>
      <build>
        <plugins>


          <plugin>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-java2ws-plugin</artifactId>
            <version>${cxf.version}</version>
            <dependencies>
              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-jaxws</artifactId>
                <version>${cxf.version}</version>
              </dependency>

              <dependency>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-rt-frontend-simple</artifactId>
                <version>${cxf.version}</version>
              </dependency>

              <dependency>
                <groupId>es.caib.portafib</groupId>
                <artifactId>portafib-ws-server</artifactId>
                <version>${portafib.version}</version>
                <scope>compile</scope>
              </dependency>

              <dependency>
                <groupId>es.caib.portafib</groupId>
                <artifactId>portafib-jpa</artifactId>
                <version>${portafib.version}</version>
                <scope>compile</scope>
              </dependency>

              <dependency>
                <groupId>es.caib.portafib</groupId>
                <artifactId>portafib-logic</artifactId>
                <version>${portafib.version}</version>
                <scope>compile</scope>
              </dependency>

            </dependencies>

            <executions>

              <execution>
                <id>generate-wsdl-PortaFIBHelloWorldWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>es.caib.portafib.ws.v1.impl.PortaFIBHelloWorldWs</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <frontend>jaxws</frontend>
                  <databinding>jaxb</databinding>
                  <outputFile>${basedir}/src/main/resources/wsdl/PortaFIBHelloWorld.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname PortaFIBHelloWorldWs -address
                    http://localhost:8080/portafib/ws/v1/PortaFIBHelloWorld</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>
              <execution>
                <id>generate-wsdl-PortaFIBUsuariAplicacioWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>es.caib.portafib.ws.v1.impl.PortaFIBUsuariAplicacioWs</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <outputFile>${basedir}/src/main/resources/wsdl/PortaFIBUsuariAplicacio.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname PortaFIBUsuariAplicacioWs
                    -address
                    http://localhost:8080/portafib/ws/v1/PortaFIBUsuariAplicacio</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>

              <execution>
                <id>generate-wsdl-PortaFIBUsuariEntitatWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>es.caib.portafib.ws.v1.impl.PortaFIBUsuariEntitatWs</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <outputFile>${basedir}/src/main/resources/wsdl/PortaFIBUsuariEntitat.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname PortaFIBUsuariEntitatWs
                    -address
                    http://localhost:8080/portafib/ws/v1/PortaFIBUsuariEntitat</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>

              <execution>
                <id>generate-wsdl-PortaFIBPeticioDeFirmaWs</id>
                <phase>generate-sources</phase>
                <configuration>
                  <className>es.caib.portafib.ws.v1.impl.PortaFIBPeticioDeFirmaWs</className>
                  <genWsdl>true</genWsdl>
                  <verbose>true</verbose>
                  <outputFile>${basedir}/src/main/resources/wsdl/PortaFIBPeticioDeFirma.wsdl</outputFile>
                  <argline>-s ${basedir}/code -portname PortaFIBPeticioDeFirmaWs
                    -address
                    http://localhost:8080/portafib/ws/v1/PortaFIBPeticioDeFirma</argline>
                </configuration>
                <goals>
                  <goal>java2ws</goal>
                </goals>
              </execution>

            </executions>
          </plugin>

          <plugin>
            <groupId>org.jboss.ws.plugins</groupId>
            <artifactId>maven-jaxws-tools-plugin</artifactId>
            <version>1.1.1.Final</version>
            <configuration>
              <verbose>true</verbose>
              <goalPrefix>wsconsume</goalPrefix>
              <extension>true</extension>
              <sourceDirectory>${project.basedir}/src/main/java</sourceDirectory>
              <targetPackage>es.caib.portafib.ws.api.v1</targetPackage>
              <bindingFiles>
                <bindingFile>${basedir}/bindings/bindings.xjc</bindingFile>
              </bindingFiles>
            </configuration>
            <executions>
              <execution>
                <id>WSDL to Java API PortaFIBHelloWorld</id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${basedir}/src/main/resources/wsdl/PortaFIBHelloWorld.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/portafib/ws/v1/PortaFIBHelloWorld?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>
              </execution>
              <execution>
                <id>WSDL to Java API PortaFIBUsuariAplicacio </id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${basedir}/src/main/resources/wsdl/PortaFIBUsuariAplicacio.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/portafib/ws/v1/PortaFIBUsuariAplicacio?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>
              </execution>
              <execution>
                <id>WSDL to Java API PortaFIBUsuariEntitat</id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${basedir}/src/main/resources/wsdl/PortaFIBUsuariEntitat.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/portafib/ws/v1/PortaFIBUsuariEntitat?wsdl</wsdlLocation>
                  <argLine>-n</argLine>
                </configuration>
              </execution>

              <execution>
                <id>WSDL to Java API PortaFIBPeticioDeFirma</id>
                <goals>
                  <goal>wsconsume</goal>
                </goals>
                <configuration>
                  <wsdls>
                    <wsdl>${basedir}/src/main/resources/wsdl/PortaFIBPeticioDeFirma.wsdl</wsdl>
                  </wsdls>
                  <wsdlLocation>http://localhost:8080/portafib/ws/v1/PortaFIBPeticioDeFirma?wsdl</wsdlLocation>

                  <argLine>-n</argLine>
                </configuration>
              </execution>

            </executions>
          </plugin>

        </plugins>

      </build>
    </profile>
  </profiles>




  <dependencies>

    <dependency>
      <groupId>org.jboss.ws.cxf</groupId>
      <artifactId>jbossws-cxf-client</artifactId>
      <version>4.1.1.Final</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.genapp</groupId>
      <artifactId>genapp-core</artifactId>
      <version>1.0</version>
      <scope>compile</scope>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.2</version>
      <scope>test</scope>
    </dependency>

  </dependencies>


</project>
