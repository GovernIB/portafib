<?xml version="1.0" encoding="UTF-8"?>
<datasources>
  <local-tx-datasource>
    <jndi-name>es.caib.portafib.db</jndi-name>

    <connection-url>jdbc:oracle:thin:@oracle-db:1521:xe</connection-url>
    <connection-property name="oracle.jdbc.implicitStatementCacheSize">100</connection-property>

    <driver-class>oracle.jdbc.driver.OracleDriver</driver-class>
    <user-name>PORTAFIB</user-name>
    <password>PORTAFIB</password>

	<valid-connection-checker-class-name>org.jboss.resource.adapter.jdbc.vendor.OracleValidConnectionChecker</valid-connection-checker-class-name>
    <exception-sorter-class-name>org.jboss.resource.adapter.jdbc.vendor.OracleExceptionSorter</exception-sorter-class-name>
	<min-pool-size>1</min-pool-size>
    <max-pool-size>30</max-pool-size>
  </local-tx-datasource>
</datasources>
