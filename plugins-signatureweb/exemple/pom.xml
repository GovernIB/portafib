<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <artifactId>plugin-signatureweb-exemple</artifactId>
  <groupId>org.fundaciobit.plugins</groupId>
  <version>1.0.0</version>
  <packaging>war</packaging>
 
  <name>FundacioBit Plugins - SignatureWeb - Exemple</name>

  <parent>
    <artifactId>plugins-signatureweb</artifactId>
    <groupId>org.fundaciobit.plugins</groupId>
    <version>1.0.0</version>
  </parent>
  
  <properties>
  	<org.springframework.version>3.2.0.RELEASE</org.springframework.version>
  </properties>
  
  <url>http://maven.apache.org</url>

  <dependencies>
 
    <!-- ================  PLUGINS ======================== -->

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureweb-api</artifactId>
      <version>1.0.0</version>
    </dependency>

    <dependency>
        <groupId>org.fundaciobit.plugins</groupId>
        <artifactId>plugin-signatureweb-miniappletinclient</artifactId>
        <version>1.0.0</version>
    </dependency>
    
    <dependency>
        <groupId>org.fundaciobit.plugins</groupId>
        <artifactId>plugin-signatureweb-miniappletinserver</artifactId>
        <version>${plugins.version}</version>
    </dependency>
    
    <dependency>
        <groupId>org.fundaciobit.plugins</groupId>
        <artifactId>plugin-signatureweb-miniappletinserversia</artifactId>
        <version>${plugins.version}</version>
        <exclusions>
            <exclusion>
              <groupId>org.bouncycastle</groupId>
              <artifactId>bcprov-jdk15</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.bouncycastle</groupId>
              <artifactId>bcmail-jdk15</artifactId>
            </exclusion>
        </exclusions> 
    </dependency>

    <dependency>
        <groupId>org.fundaciobit.plugins</groupId>
        <artifactId>plugin-signatureweb-portafib</artifactId>
        <version>1.0.0</version>
    </dependency>
    
    

    <!-- ================  WEB ======================== -->
    
    <dependency>
    	<groupId>javax.servlet</groupId>
    	<artifactId>servlet-api</artifactId>
    	<version>2.5</version>
    	<scope>provided</scope>
    </dependency>

    <dependency>
    	<groupId>org.springframework</groupId>
    	<artifactId>spring-core</artifactId>
    	<version>${org.springframework.version}</version>
    </dependency>
    <dependency>
    	<groupId>org.springframework</groupId>
    	<artifactId>spring-webmvc</artifactId>
    	<version>${org.springframework.version}</version>
    </dependency>
    
    <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-tx</artifactId>
        <version>${org.springframework.version}</version>
    </dependency>
    
    <dependency>
    	<groupId>jstl</groupId>
    	<artifactId>jstl</artifactId>
    	<version>1.2</version>
    </dependency>

    <dependency>
    	<groupId>taglibs</groupId>
    	<artifactId>standard</artifactId>
    	<version>1.1.2</version>
    </dependency>
    
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-api</artifactId>
    	<version>1.7.2</version>
    </dependency>
    <dependency>
    	<groupId>org.slf4j</groupId>
    	<artifactId>slf4j-log4j12</artifactId>
    	<version>1.7.2</version>
    </dependency>
    
    <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>1.2.14</version>
    </dependency>
    
    <dependency>
        <groupId>org.tuckey</groupId>
        <artifactId>urlrewritefilter</artifactId>
        <version>4.0.4</version>
    </dependency>

    <dependency>
      <groupId>commons-fileupload</groupId>
	  <artifactId>commons-fileupload</artifactId>
      <version>1.2.1</version>
    </dependency>
    
    <!-- ================  TEST ======================== -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    
  </dependencies>
  
  
  
  
  <build>
    <finalName>exemple</finalName>
    <plugins>
         <plugin>
            <groupId>org.apache.tomcat.maven</groupId>
            <artifactId>tomcat7-maven-plugin</artifactId>
            <version>2.2</version>
            <configuration>
              <port>9090</port>
              <path>/</path>
              <systemProperties>
                  <signaturewebplugins.path>${basedir}/plugins.properties</signaturewebplugins.path>
              </systemProperties>
            </configuration>
          </plugin>
          
    </plugins>
  </build>

</project>
