<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>plugin-signatureweb-exemplepassarela-plugins</artifactId>
  <groupId>org.fundaciobit.plugins</groupId>
  <packaging>ear</packaging>

  <name>FundacioBit Plugins - SignatureWeb - Exemple Passarela - Plugins</name>

  <parent>
    <artifactId>plugin-signatureweb-exemplepassarela</artifactId>
    <groupId>org.fundaciobit.plugins</groupId>
    <version>2.0.0</version>
  </parent>

  <dependencies>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugins-api</artifactId>
      <version>${plugins.version}</version>
      <scope>provided</scope>
    </dependency>

    <!-- ============================================== -->
    <!-- ============================================== -->
    <!-- =========== PLUGINS  FIRMA WEB =============== -->
    <!-- ============================================== -->
    <!-- ============================================== -->

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>                    
      <artifactId>plugin-signatureweb-api</artifactId>
      <version>${plugins.signatureweb.version}</version>
      <scope>provided</scope>
    </dependency>


    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureweb-miniappletinserver</artifactId>
      <version>${plugins.signatureweb.version}</version>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureweb-miniappletinclient</artifactId>
      <version>${plugins.signatureweb.version}</version>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureweb-afirma_triphase_server</artifactId>
      <version>${plugins.signatureweb.version}</version>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureweb-clavefirma</artifactId>
      <version>${plugins.signatureweb.version}</version>
    </dependency>


    <!--  Plugin de firma web en servidor de SIA s'ha definit en un Profile (Veure més abaix) -->

    <!--  Plugin de firma web de Passarel·la PortaFIB s'ha definit en un Profile (Veure més abaix) -->

    <!-- ============================================== -->
    <!-- ============================================== -->
    <!-- ======== PLUGINS FIRMA EN SERVIDOR =========== -->
    <!-- ============================================== -->
    <!-- ============================================== -->

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>                    
      <artifactId>plugin-signatureserver-api</artifactId>
      <version>${plugins.signatureserver.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.plugins</groupId>
      <artifactId>plugin-signatureserver-miniappletinserver</artifactId>
      <version>${plugins.signatureserver.version}</version>
    </dependency>

    <!--  Plugin de firma en servidor de Passarel·la PortaFIB s'ha definit en un Profile (Veure més abaix) -->

  </dependencies>


  <profiles>
  
    <!-- ============================================== -->
    <!-- ============================================== -->
    <!-- ===== PROFILES DE PLUGINS FIRMA EN WEB ======= -->
    <!-- ============================================== -->
    <!-- ============================================== -->
  
    <!-- PROFILE PER INCLOURE Modul de FIRMA SIA -->
    <profile>
      <id>sia</id>
      <dependencies>
        <dependency>
          <groupId>org.fundaciobit.plugins</groupId>
          <artifactId>plugin-signatureweb-miniappletinserversia</artifactId>
          <version>${plugins.signatureweb.version}</version>
          <exclusions>
            <exclusion>
              <groupId>org.bouncycastle</groupId>
              <artifactId>bcprov-jdk15</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.bouncycastle</groupId>
              <artifactId>bcmail-jdk15</artifactId>
            </exclusion>
          </exclusions> 
        </dependency>
      </dependencies>
    </profile>


    <!-- PROFILE PER INCLOURE Modul de FIRMA WEB DE PASSARELA PORTAFIB -->
    <profile>
      <id>passarelaweb</id>
      <dependencies>
        <dependency>
          <groupId>org.fundaciobit.plugins</groupId>
          <artifactId>plugin-signatureweb-portafib</artifactId>
          <version>${plugins.signatureweb.version}</version>
        </dependency>
      </dependencies>
    </profile>

    
    <!-- ============================================== -->
    <!-- ============================================== -->
    <!-- === PROFILES DE PLUGINS FIRMA EN SERVIDOR ==== -->
    <!-- ============================================== -->
    <!-- ============================================== -->

    <!-- PROFILE PER INCLOURE Modul de FIRMA EN SERVIDOR DE PASSARELA PORTAFIB -->
    <profile>
      <id>passarelaserver</id>
      <dependencies>
        <dependency>
          <groupId>org.fundaciobit.plugins</groupId>
          <artifactId>plugin-signatureserver-portafib</artifactId>  
          <version>${plugins.signatureserver.version}</version>
        </dependency>
      </dependencies>
    </profile>
    
  </profiles>

  <build>
    <finalName>passarela_plugins</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.3.2</version>

        <configuration>
          <displayName>Plugins per Exemple de Modul Firma Web/Servidor</displayName>
          <description>Plugins per Exemple de Modul Firma Web/Servidor</description>

          <defaultLibBundleDir>lib</defaultLibBundleDir>

          <jboss>
            <version>5</version>
            <loader-repository>org.fundaciobit.plugins:loader=passarela_plugins.ear</loader-repository> 
            <loader-repository-config>java2ParentDelegation=false</loader-repository-config> 
          </jboss>

          <modules>

            <!-- ============================================== -->
            <!-- ============================================== -->
            <!-- =========== PLUGINS  FIRMA WEB =============== -->
            <!-- ============================================== -->
            <!-- ============================================== -->

            <jarModule>
              <groupId>org.fundaciobit.plugins</groupId>
              <artifactId>plugin-signatureweb-miniappletinserver</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

            <jarModule>
              <groupId>org.fundaciobit.plugins</groupId>
              <artifactId>plugin-signatureweb-miniappletinclient</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

            <jarModule>
              <groupId>org.fundaciobit.plugins</groupId>
              <artifactId>plugin-signatureweb-afirma_triphase_server</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

            <jarModule>
              <groupId>org.fundaciobit.plugins</groupId>
              <artifactId>plugin-signatureweb-clavefirma</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

            <!-- ============================================== -->
            <!-- ============================================== -->
            <!-- =========== PLUGINS FIRMA SERVER ============= -->
            <!-- ============================================== -->
            <!-- ============================================== -->

            <jarModule>
              <groupId>org.fundaciobit.plugins</groupId>
              <artifactId>plugin-signatureserver-miniappletinserver</artifactId>
              <includeInApplicationXml>true</includeInApplicationXml>
            </jarModule>

          </modules>

        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jboss-maven-plugin</artifactId>
        <version>1.5.0</version>
        <configuration>
          <serverName>default</serverName>
          <fileName>target/passarela_plugins.ear</fileName>
        </configuration>
      </plugin>

    </plugins>
  </build>

</project>