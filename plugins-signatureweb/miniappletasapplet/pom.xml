<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.fundaciobit.plugins</groupId>
    <artifactId>plugin-signatureweb-miniappletasapplet</artifactId>
    <packaging>jar</packaging>
    <version>1.0.0</version>

    <name>FundacioBit Plugins - SignatureWeb - MiniAppletAsApplet</name>

    <parent>
        <groupId>org.fundaciobit.plugins</groupId>
        <version>1.0.0</version>
        <artifactId>plugins-signatureweb</artifactId>
    </parent>

    <url>http://maven.apache.org</url>

    <dependencies>

        <dependency>
            <groupId>org.fundaciobit.plugins</groupId>
            <artifactId>plugins-api</artifactId>
            <version>1.0.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.fundaciobit.plugins</groupId>
            <version>1.0.0</version>
            <artifactId>plugin-signatureweb-api</artifactId>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>org.fundaciobit.plugins</groupId>
            <artifactId>plugin-signatureweb-miniappletutils</artifactId>
            <version>1.0.0</version>
        </dependency>
        
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>

		<dependency>
		  <groupId>apache-lang</groupId>
		  <artifactId>commons-lang</artifactId>
		  <version>2.0</version>
		</dependency>
        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>

    </dependencies>
    
    
    <build>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
			<version>2.3.2</version>
            <configuration>
               <source>1.6</source>
               <target>1.6</target>
               <compilerVersion>1.6</compilerVersion>
            </configuration>
         </plugin>
    
         <plugin>
		  <artifactId>maven-dependency-plugin</artifactId>
		  <version>2.0</version>
		  <executions>
			<execution>
			  <id>copy1</id>
			  <phase>prepare-package</phase>
			  <goals>
				<goal>copy</goal>
			  </goals>
			  <configuration>
				<artifactItems>
				  <artifactItem>
                    <!-- XYZ
					<artifactId>portafib-applet-signed</artifactId>
                    <groupId>es.caib.portafib</groupId>
					<version>${project.version}</version>
                    -->
                    <artifactId>plugin-signatureweb-miniappletui-signed</artifactId>
                    <groupId>es.caib.portafib</groupId>
                    <version>1.0.0</version>
					<type>jar</type>
					<overWrite>true</overWrite>
                    <destFileName>plugin-signatureweb-miniappletui-signed.jar</destFileName>
		          </artifactItem>
				</artifactItems>
				<outputDirectory>${project.build.directory}/classes/applet</outputDirectory>
			  </configuration>
			</execution>

			<execution>
			  <id>copy2</id>
			  <phase>prepare-package</phase>
			  <goals>
				<goal>copy</goal>
			  </goals>
			  <configuration>
				<artifactItems>
				  <artifactItem>
					<artifactId>afirma-miniapplet-full</artifactId>
                    <groupId>es.gob.afirma</groupId>
					<version>1.3</version>
					<type>jar</type>
					<overWrite>true</overWrite>
					<destFileName>miniapplet-full.jar</destFileName>
		          </artifactItem>
				</artifactItems>
				<outputDirectory>${project.build.directory}/classes/applet</outputDirectory>
			  </configuration>
			</execution>
		  </executions>
		</plugin>
		
      </plugins>
   </build>
    
    
</project>
