    <!-- FRONT WEB PORTAFIB AMB AUTENTICACIO CLIENT-CERT -->
    <profile>
      <id>clientcert</id>

      <dependencies>
        <dependency>
          <groupId>es.caib.portafib</groupId>
          <artifactId>portafib-back-clientcert</artifactId>
          <version>${project.version}</version>
          <type>war</type>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-ear-plugin</artifactId>
            <version>2.3.2</version>
            <configuration>
              <modules combine.children="append">
                <webModule>
                  <groupId>es.caib.portafib</groupId>
                  <artifactId>portafib-back-clientcert</artifactId>
                  <contextRoot>portafib/s</contextRoot>
                </webModule>
              </modules>
            </configuration>
          </plugin>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.3</version>
            <executions>
              <execution>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>generate-sources</phase>
                <configuration>
                  <tasks>
                    <mkdir dir="${clientcert.properties.dir}"/>
                    <echo file="${clientcert.properties}" message="# Indica si existeix mòdul amb authenticació CLIENTCERT (portafibs)${line.separator}"/>
                    <echo file="${clientcert.properties}" append="true" message="portafib.clientcert=true${line.separator}" />
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

