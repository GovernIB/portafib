<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.fundaciobit.pluginsib.signatureserver</groupId>
  <artifactId>pluginsib-signatureserver-afirmalibs</artifactId>
  <packaging>jar</packaging>
  <version>3.0.0</version>

  <name>FundacioBit - PluginsIB - SignatureServer - @firma Libs</name>

  <parent>
    <groupId>org.fundaciobit.pluginsib.signatureserver</groupId>
    <version>3.0.0</version>
    <artifactId>pluginsib-signatureserver</artifactId>
  </parent>

  <properties>
    <project.build.sourceEncoding>utf-8</project.build.sourceEncoding>
    <bouncycastle.version>1.53</bouncycastle.version>
  </properties>

  <dependencies>


    <dependency>
      <groupId>org.fundaciobit.pluginsib.core</groupId>
      <artifactId>pluginsib-core</artifactId>
      <version>2.0.0</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.pluginsib.signatureserver</groupId>
      <artifactId>pluginsib-signatureserver-api</artifactId>
      <version>${plugins.signatureserver.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fundaciobit.pluginsib.signatureserver</groupId>
      <artifactId>pluginsib-signatureserver-miniappletutils</artifactId>
      <version>3.0.0</version>
    </dependency>
    
    <dependency>
      <groupId>es.gob.afirma</groupId>
      <artifactId>afirma-crypto-cades</artifactId>
      <version>3.3.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>es.gob.afirma</groupId>
      <artifactId>afirma-crypto-pdf</artifactId>
      <version>3.3.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>es.gob.afirma</groupId>
      <artifactId>afirma-crypto-xades</artifactId>
      <version>3.3.2-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.6</source>
            <target>1.6</target>
            <encoding>UTF-8</encoding>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
