  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>3.2.0</version>  <!-- 3.1.0 3.2.3 -->
        <configuration>
          <useCache>${war.useCache}</useCache>
          <filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
          <webResources>
            <!-- Documents pdf que es troben dins /doc/pdf i han d'anar a WEBAPP/Documentacio -->
            <resource>
              <directory>../doc/pdf</directory>
              <targetPath>doc</targetPath>
              <includes>
                <include>Manual_de_Usuari_de_PortaFIB.pdf</include>
                <include>MCFv1.3_manual-integrador_ES_Filtros.pdf</include>
              </includes>
              <filtering>false</filtering>
            </resource>
          </webResources>
          <packagingExcludes>
					  WEB-INF/lib/xml-apis-*.jar,
					  WEB-INF/lib/slf4j*.jar
          </packagingExcludes>
        </configuration>
      </plugin>


      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <version>2.4.1</version>
        <configuration>
          <filesets>
            <fileset>
              <directory>${basedir}/src/main/resources</directory>
              <includes>
                <include>genapp_*.properties</include>
                <include>portafib_genapp_*.properties</include>
                <include>logicmissatges_*.properties</include>
              </includes>
              <followSymlinks>false</followSymlinks>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>				
            <phase>validate</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/src/main/resources</outputDirectory>
              <resources>          
                <resource>
                  <directory>${basedir}/../logic/src/main/resources</directory>
                  <includes>
                    <include>logicmissatges_*.properties</include>
                    <include>genapp_*.properties</include>
                    <include>portafib_genapp_*.properties</include>
                  </includes>
                  <filtering>true</filtering>
                </resource>
              </resources>
              <overwrite>true</overwrite>
            </configuration>            
          </execution>
        </executions>
      </plugin>

    </plugins>

