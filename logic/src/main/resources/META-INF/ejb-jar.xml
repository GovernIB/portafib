<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/ejb-jar_3_0.xsd"
         version="3.0">
    <assembly-descriptor>

        <!-- Log de les cridades a PeticioDeFirmaLogicaEJB ja que és l'EJB més crític #220 -->
        <interceptor-binding>
            <ejb-name>PeticioDeFirmaLogicaEJB</ejb-name>
            <interceptor-class>es.caib.portafib.logic.interceptors.LogInterceptor</interceptor-class>
        </interceptor-binding>

        <application-exception>
            <exception-class>org.fundaciobit.genapp.common.i18n.I18NException</exception-class>
        </application-exception>

        <application-exception>
            <exception-class>org.fundaciobit.genapp.common.i18n.I18NValidationException</exception-class>
        </application-exception>

    </assembly-descriptor>
</ejb-jar>